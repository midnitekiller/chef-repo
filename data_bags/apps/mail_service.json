                  { "description": "Send email", "hyperlink": "self", "verb": "POST" },
                  { "description": "Send email", "hyperlink": "send", "verb": "POST" }
                ]
            }
          ]},
  "email_step_time":        30,
  "email_poison_limit":     10,
