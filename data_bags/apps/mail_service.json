{ "id":                "mail_service",

  "repo_url":          "https://SomeGitHubUser:TheirPassword@github.com/OceanDev/mail.git",
  "repo_private_key":  null,

  "web_server_role":   "mail_rails_server",
  "service":           true,
  "host_regexp":       null,
  "path_regexp":       "/v[0-9]+/mails",
  "tc_config_id":      "mail",
  "force_deploy":      false,
  
  "db":                false,

  "api_user_name":     "mail",

  "defines_api_users": {

    "mail": {
