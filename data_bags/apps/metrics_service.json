                "database": "metrics",
                "encoding": "unicode", 
                "pool":     5, 
                "timeout":  5000
               },
    "prod":    {"adapter":  "postgresql",
                "host":     "prod-somehost.amazonaws.com",
                "port":     5432,
                "username": "myuser", 
                "password": "mypassword",
                "database": "metrics",
                "encoding": "unicode", 
                "pool":     5, 
                "timeout":  5000
               }
   },

